package park;

import java.io.FileNotFoundException;

import io.In;

public class manager {
	private String pwd="";
	private double price=1.0;
	park p= new park();
	public manager(){
		this.pwd="123456";
	}
	public void change_pwd(String NEW) {
		pwd=NEW;
	}
	public void chenge_max(int a) {
		p.change_smax(a);
	}
	public void parking(String str) {
		p.in(str);
	}
	public String leaving(String str) {
		return p.out(str);
	}
	public double price() {
		return price;
	}
	public String usedtime(String str) {
		if (p.search(str).info) {
			long endtime = System.currentTimeMillis();
			long usedtime = (endtime - p.search(str).time) / (1000 * 60);
			return String.valueOf(usedtime);
		}
		else return null;		
	}
	public double fee(String str) {
		double fee=0.0;
		if (p.search(str).info) {
			long endtime = System.currentTimeMillis();
			long usedtime = (endtime - p.search(str).time) / (1000 * 60);
			if (usedtime  > 0) {
				fee = usedtime * price;
			} 
		}
		return fee;
	}

	public void file_in() {
		In in = new In();
		try {
			in.input();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		if (in.back().size() > 0) {
			for (int i = 0; i < in.back().size(); i++) {
				if (i < p.s_max) {
					p.place.add(in.back().get(i));
					p.s_count++;
				} else {
					p.road.add(in.back().get(i));
					p.count++;
				}
			}
			p.count += p.s_count;
		}
	}
	public String login() {
		return pwd;
	}

}
